<?xml version="1.0" encoding="utf-8"?>
<!--
  SECURITY: Network security configuration with restricted cleartext traffic.
  Only allow cleartext (HTTP) for localhost and specific trusted internal domains.
  All other traffic must use HTTPS/TLS.
-->
<network-security-config>
  <!-- Allow cleartext for LAN/local gateway connections (debug build) -->
  <base-config cleartextTrafficPermitted="true">
    <trust-anchors>
      <certificates src="system" />
    </trust-anchors>
  </base-config>
</network-security-config>
