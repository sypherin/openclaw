<?xml version="1.0" encoding="utf-8"?>
<!--
  SECURITY: Network security configuration with restricted cleartext traffic.
  Only allow cleartext (HTTP) for localhost and specific trusted internal domains.
  All other traffic must use HTTPS/TLS.
-->
<network-security-config>
  <!-- Default: Require encrypted connections for all domains -->
  <base-config cleartextTrafficPermitted="false">
    <trust-anchors>
      <certificates src="system" />
    </trust-anchors>
  </base-config>

  <!-- Allow cleartext for localhost/loopback only (local development) -->
  <domain-config cleartextTrafficPermitted="true">
    <domain includeSubdomains="false">localhost</domain>
    <domain includeSubdomains="false">127.0.0.1</domain>
    <domain includeSubdomains="false">[::1]</domain>
  </domain-config>

  <!-- Allow cleartext for Tailscale internal domains (trusted network) -->
  <domain-config cleartextTrafficPermitted="true">
    <domain includeSubdomains="true">ts.net</domain>
  </domain-config>

  <!-- Allow cleartext for internal moltbot domains (trusted network) -->
  <domain-config cleartextTrafficPermitted="true">
    <domain includeSubdomains="true">moltbot.internal</domain>
  </domain-config>
</network-security-config>
